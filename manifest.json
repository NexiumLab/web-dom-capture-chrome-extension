{
  "manifest_version": 3,
  "name": "DOM Grabber",
  "version": "0.1.0",
  "description": "Một extension đơn giản để lấy và lưu DOM của trang web.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1:51234/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon16.png"
  },
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 